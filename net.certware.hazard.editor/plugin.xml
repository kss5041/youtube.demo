<plugin>

   <extension point="org.eclipse.ui.newWizards">
      <wizard
            id="net.certware.hazard.hazard.presentation.HazardModelWizardID"
            name="%_UI_HazardModelWizard_label"
            class="net.certware.hazard.hazard.presentation.HazardModelWizard"
            category="net.certware.core.ui.newwizard.category"
            icon="icons/full/obj16/hazardmodel.png">
         <description>%_UI_HazardModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
   </extension>

   <extension point="org.eclipse.ui.editors">
      <editor
            id="net.certware.hazard.hazard.presentation.HazardEditorID"
            name="%_UI_HazardEditor_label"
            icon="icons/full/obj16/hazardmodel.png"
            extensions="haz"
            class="net.certware.hazard.hazard.presentation.HazardEditor"
            contributorClass="net.certware.hazard.hazard.presentation.HazardActionBarContributor">
      </editor>
   </extension>

</plugin>
